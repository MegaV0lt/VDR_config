# Parameters for VDR plugin imonlcd

#INIT_ACTION=""
#EXIT_ACTION=""
#RESTART_ACTION=""
#RECORD_ACTION=""

PLUGIN_NAME=imonlcd
PLUGIN_PARAMETERS=""

if [ "$(lsusb |grep "15c2:ffdc")" != "" ] ; then
   PLUGIN_PARAMETERS="-p ffdc"
fi
[ "$(pidof LCDd)" != "" ] && /etc/init.d/LCDd stop
VDR_PARAMETERS=""
