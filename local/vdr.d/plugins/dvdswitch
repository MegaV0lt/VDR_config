# Parameters for VDR plugin dvdswitch
# Script to use for reading DVDs
#  default: Use standard-script
DVDSWITCH_READ_DVD="/etc/vdr/plugins/dvdswitch/dvdswitch_read.sh"

# Script to use for writing DVDs
#  default: Use standard-script
DVDSWITCH_WRITE_DVD="/etc/vdr/plugins/dvdswitch/dvdswitch_write.sh"

#INIT_ACTION=""
#EXIT_ACTION=""
#RESTART_ACTION=""
#RECORD_ACTION=""

if [ -e ${DVDSWITCH_READ_DVD} -a -e ${DVDSWITCH_WRITE_DVD} ] ; then
   PLUGIN_NAME="dvdswitch"
else
   PLUGIN_NAME=""
fi
PLUGIN_PARAMETERS="-r ${DVDSWITCH_READ_DVD} -w ${DVDSWITCH_WRITE_DVD}"

VDR_PARAMETERS=""
