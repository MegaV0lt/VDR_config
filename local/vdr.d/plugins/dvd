# Parameters for VDR plugin dvd

# By default VDR expects the DVD drive to be located at
# /dev/dvd (which typically is a symbolic link to the
# actual device, for instance /dev/hdc).
#
#   allowed values: device names
#   default: /dev/dvd
DVD_DRIVE="/dev/dvd"

#INIT_ACTION=""
#EXIT_ACTION=""
#RESTART_ACTION=""
#RECORD_ACTION=""

# Wait for DVD drive
cnt=0
while [ ! -e $DVD_DRIVE -a $cnt -lt 10 ] ; do
   logger "Waiting for <$DVD_DRIVE>"
   sleep 0.5
   ((cnt++))
done

if [ -e $DVD_DRIVE ] ; then
   PLUGIN_NAME="dvd"
else
   PLUGIN_NAME=""
fi
PLUGIN_PARAMETERS="-C$DVD_DRIVE"

VDR_PARAMETERS=""
