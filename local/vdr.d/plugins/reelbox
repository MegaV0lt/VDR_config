# Parameters for VDR plugin reelbox

#INIT_ACTION=""
#EXIT_ACTION=""
#RESTART_ACTION=""
#RECORD_ACTION=""

PLUGIN_NAME=reelbox
PLUGIN_PARAMETERS=""

VDR_PARAMETERS=""

# set primary Device
DevNum=$(ls -d /dev/dvb/adapter* 2>/dev/null | wc -w)
sed -i /etc/vdr/setup.conf -e "s/^.*PrimaryDVB.*$/PrimaryDVB = $(($DevNum + 1))/"
