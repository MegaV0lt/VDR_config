# Parameters for VDR plugin skinenigmang

#INIT_ACTION=""
#EXIT_ACTION=""
#RESTART_ACTION=""
#RECORD_ACTION=""

PLUGIN_NAME=skinenigmang
PLUGIN_PARAMETERS="--epgimages=$EPG_IMAGES"

rm /etc/vdr/plugins/skinenigmang
ch=$(grep "skinenigmang.ChannelLogoHeight" /etc/vdr/setup.conf | cut -f 3 -d " ")
if [ "$ch" != "" ] && [ $ch -gt 80 ] ; then
   ln -sf skinenigmang-big /etc/vdr/plugins/skinenigmang
else
   ln -sf skinenigmang-small /etc/vdr/plugins/skinenigmang
fi

VDR_PARAMETERS=""
